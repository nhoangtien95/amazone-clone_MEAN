<% layout('layout') %>


<div class="container">
    <div class="row">
      <% if (products.length > 0 ) { %>
      <% for (var i = 0; i < products.length; i++) { %>
        <div class="col-md-4">
          <a href="/product/<%= products[i]._id %>">
            <div class="thumbnail">
              <img src="<%= products[i].image %>">
              <div class="caption">
                <h3> <%= products[i].name %> </h3>
                <p> <%= products[i].category.namne %> </p>
                <p> <%= products[i].price %> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      <% } else { %>
        <h1> HIỆN CHƯA CÓ SẢN PHẨM NÀO. </h1>
        <% } %>

    </div>
</div>
